    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.57.1",
